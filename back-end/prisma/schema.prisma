generator client {
  provider = "prisma-client-js"
  output   = "app/generated/prisma/client"

}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario{
  id Int @default(autoincrement()) @id
  nome String
  email String @unique
  senha String
  create_at DateTime? @default(now())
  update_at DateTime? @updatedAt
  idOng Int?
  ong Ong? @relation(fields: [idOng], references: [id])
}

model Ong{
  id Int @default(autoincrement()) @id
  nome String
  CNPJ String @unique
  telefone String
  email String
  create_at DateTime @default(now())
  update_at DateTime @updatedAt
  animais Animal[]
  usuarios Usuario[]
}

model Animal{
  id Int @default(autoincrement()) @id
  especie String
  nome String
  data_nascimento DateTime
  porte String
  sexo String
  descricao String
  idOng Int?
  ong Ong? @relation(fields: [idOng], references: [id])
}
